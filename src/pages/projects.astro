---
import Layout from "../layouts/Layout.astro";

const base = import.meta.env.BASE_URL || "/";
const H = (p) => `${base}${p.replace(/^\/+/, "")}`;

const projects = [
  { title: "Data Viz Demo", link: "https://example.com", tech: ["Astro","D3"], summary: "Interactive charts and storytelling." },
  { title: "API Docs Site", link: "https://example.com", tech: ["Markdown","OpenAPI"], summary: "Readable, searchable docs." },
  { title: "Hugo to Astro", link: "https://example.com", tech: ["Hugo","Astro"], summary: "Clean migration with GitHub Pages." }
];
---
<Layout title="Projects — Sridhar Rao">
  <h1>Projects</h1>
  <div class="grid">
    {projects.map(p => (
      <a class="card" href={p.link} target="_blank" rel="noreferrer">
        <h3 style="margin-top:0">{p.title}</h3>
        <p class="muted">{p.tech.join(" · ")}</p>
        <p>{p.summary}</p>
      </a>
    ))}
  </div>
</Layout>

